#!/usr/bin/perl

use strict;
use warnings;

use AlterMolecule qw( bond_stretching );

#
# Unit test: AlterMolecule::bond_stretching.
# Example: ./bond_stretching atom-coords.dat
#

my ( $atom_coords_file ) = @ARGV;

my @atom_coords;
open( my $fh, "<", $atom_coords_file );
while( <$fh> ){
    push( @atom_coords, [ grep( /\S/, split( /#.+|\s+/, $_ ) ) ] );
}
close( $fh );

my $bond_stretching_matrix =
    bond_stretching( $atom_coords[0], $atom_coords[1], $atom_coords[2], "r");

for my $matrix_id ( 0..$#{ $bond_stretching_matrix } ) {
    for my $row ( @{ $bond_stretching_matrix->[$matrix_id] } ) {
	print( join( "\t", @{ $row } ), "\n" );
    }
    print( "\n" ) if $matrix_id != $#{ $bond_stretching_matrix };
}
