#!/usr/bin/perl

use strict;
use warnings;

use lib "../../lib/perl";
use LinearAlgebra qw( matrix_sub );

#
# Unit test: LinearAlgebra::matrix_sub.
#
# Substitutes one matrix from another..
#
# Example: ./matrix_sub example.dat
#

my ( $cif_file ) = @ARGV;
my @matrices = ( [] );

open( my $fh, "<", $cif_file );
while( <$fh> ) {
    if( $_ =~ /^\n$/ ) {
	push( @matrices, [] );
    } else {
	push( @{ $matrices[-1] }, [ split( " ", $_ ) ] );
    }
}
close( $fh );

my @left_matrix = @{ $matrices[0] };
my @right_matrix = @{ $matrices[1] };

my $matrix_sub = matrix_sub( \@left_matrix, \@right_matrix );

foreach( @$matrix_sub ) {
    print( join( "\t", @$_ ), "\n" );
}
