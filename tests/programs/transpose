#!/usr/bin/perl

use strict;
use warnings;

use lib "../../lib";
use LinearAlgebra qw( transpose );

#
# Unit test: LinearAlgebra::transpose
#
# Transposes matrix.
#
# Example: ./transpose example.dat
#

@ARGV = ( "-" ) unless @ARGV;
my ( $matrix_file ) = @ARGV;

my @matrix;

open( my $fh, "<", $matrix_file );
while( <$fh> ) {
    push( @matrix, [ split( " ", $_ ) ] );
}
close( $fh );

my $transposed_matrix = transpose( \@matrix );

for my $row ( @{ $transposed_matrix } ) {
    print( join( "\t", @{ $row } ), "\n" );
}
